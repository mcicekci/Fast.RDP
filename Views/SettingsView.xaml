<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="FastRDP.Views.SettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Width="600"
    Height="650">

    <ScrollViewer>
        <StackPanel Spacing="16" Padding="24">
            
            <!-- Genel Ayarlar -->
            <TextBlock Text="Genel Ayarlar" 
                       FontSize="18" 
                       FontWeight="SemiBold"
                       Margin="0,0,0,8"/>

            <!-- RDP Klasörü -->
            <StackPanel Spacing="8">
                <TextBlock Text="RDP Profil Klasörü" FontWeight="SemiBold"/>
                <Grid ColumnSpacing="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox Grid.Column="0"
                             Text="{x:Bind ViewModel.RdpFolder, Mode=TwoWay}"
                             IsReadOnly="True"
                             PlaceholderText="RDP dosyalarının saklandığı klasör"/>
                    <Button Grid.Column="1"
                            Content="Gözat"
                            Click="OnBrowseFolderClick"/>
                </Grid>
                <TextBlock Text="RDP profil dosyalarınızın saklanacağı klasörü belirleyin."
                           FontSize="12"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            </StackPanel>

            <MenuFlyoutSeparator/>

            <!-- Görünüm Ayarları -->
            <TextBlock Text="Görünüm" 
                       FontSize="18" 
                       FontWeight="SemiBold"
                       Margin="0,8,0,8"/>

            <!-- Tema -->
            <StackPanel Spacing="8">
                <TextBlock Text="Tema" FontWeight="SemiBold"/>
                <ToggleSwitch IsOn="{x:Bind ViewModel.IsDarkTheme, Mode=TwoWay}"
                              OnContent="Koyu Tema"
                              OffContent="Açık Tema">
                    <ToggleSwitch.HeaderTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE771;" FontSize="16"/>
                                <TextBlock Text="Karanlık Mod"/>
                            </StackPanel>
                        </DataTemplate>
                    </ToggleSwitch.HeaderTemplate>
                </ToggleSwitch>
            </StackPanel>

            <!-- Accent Color -->
            <StackPanel Spacing="8">
                <TextBlock Text="Vurgu Rengi" FontWeight="SemiBold"/>
                <ComboBox ItemsSource="{x:Bind ViewModel.AvailableAccentColors}"
                          SelectedItem="{x:Bind ViewModel.AccentColor, Mode=TwoWay}"
                          HorizontalAlignment="Stretch"/>
                <TextBlock Text="Uygulamanın vurgu rengini değiştirin"
                           FontSize="12"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            </StackPanel>

            <!-- Font Size -->
            <StackPanel Spacing="8">
                <TextBlock Text="Yazı Boyutu" FontWeight="SemiBold"/>
                <ComboBox ItemsSource="{x:Bind ViewModel.AvailableFontSizes}"
                          SelectedItem="{x:Bind ViewModel.FontSize, Mode=TwoWay}"
                          HorizontalAlignment="Stretch"/>
                <TextBlock Text="Arayüzdeki yazı boyutunu ayarlayın"
                           FontSize="12"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            </StackPanel>

            <!-- Thumbnails -->
            <ToggleSwitch IsOn="{x:Bind ViewModel.ShowThumbnails, Mode=TwoWay}"
                          Header="Profil Önizlemeleri"
                          OnContent="Aktif"
                          OffContent="Pasif">
                <ToggleSwitch.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE91B;" FontSize="16"/>
                                <TextBlock Text="Profil Önizlemeleri"/>
                            </StackPanel>
                            <TextBlock Text="RDP bağlantıları için ekran görüntüsü önizlemeleri göster"
                                       FontSize="12"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </DataTemplate>
                </ToggleSwitch.HeaderTemplate>
            </ToggleSwitch>

            <!-- Son Kullanılanlar Sayısı -->
            <StackPanel Spacing="8">
                <TextBlock Text="Son Kullanılanlar Sayısı" FontWeight="SemiBold"/>
                <NumberBox Value="{x:Bind ViewModel.RecentCount, Mode=TwoWay}"
                           Minimum="1"
                           Maximum="50"
                           SpinButtonPlacementMode="Inline"
                           HorizontalAlignment="Left"
                           Width="200"/>
                <TextBlock Text="Son kullanılanlar listesinde gösterilecek profil sayısı"
                           FontSize="12"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            </StackPanel>

            <MenuFlyoutSeparator/>

            <!-- Sistem Ayarları -->
            <TextBlock Text="Sistem Entegrasyonu" 
                       FontSize="18" 
                       FontWeight="SemiBold"
                       Margin="0,8,0,8"/>

            <!-- Windows ile Başlat -->
            <ToggleSwitch IsOn="{x:Bind ViewModel.StartWithWindows, Mode=TwoWay}"
                          Header="Windows ile Başlat"
                          OnContent="Aktif"
                          OffContent="Pasif">
                <ToggleSwitch.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE7E8;" FontSize="16"/>
                                <TextBlock Text="Windows ile Başlat"/>
                            </StackPanel>
                            <TextBlock Text="Uygulama Windows başlangıcında otomatik olarak başlasın"
                                       FontSize="12"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </DataTemplate>
                </ToggleSwitch.HeaderTemplate>
            </ToggleSwitch>

            <!-- Sistem Tepsisine Minimize -->
            <ToggleSwitch IsOn="{x:Bind ViewModel.MinimizeToTray, Mode=TwoWay}"
                          Header="Sistem Tepsisine Minimize Et"
                          OnContent="Aktif"
                          OffContent="Pasif">
                <ToggleSwitch.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE921;" FontSize="16"/>
                                <TextBlock Text="Sistem Tepsisine Minimize Et"/>
                            </StackPanel>
                            <TextBlock Text="Pencere kapatıldığında sistem tepsisinde çalışmaya devam et"
                                       FontSize="12"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </DataTemplate>
                </ToggleSwitch.HeaderTemplate>
            </ToggleSwitch>

            <MenuFlyoutSeparator/>

            <!-- Yedekleme -->
            <TextBlock Text="Yedekleme" 
                       FontSize="18" 
                       FontWeight="SemiBold"
                       Margin="0,8,0,8"/>

            <!-- Otomatik Yedekleme -->
            <ToggleSwitch IsOn="{x:Bind ViewModel.AutoBackup, Mode=TwoWay}"
                          Header="Otomatik Yedekleme"
                          OnContent="Aktif"
                          OffContent="Pasif">
                <ToggleSwitch.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE777;" FontSize="16"/>
                                <TextBlock Text="Otomatik Yedekleme"/>
                            </StackPanel>
                            <TextBlock Text="Profil değişikliklerinde otomatik yedekleme oluştur"
                                       FontSize="12"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </DataTemplate>
                </ToggleSwitch.HeaderTemplate>
            </ToggleSwitch>

            <!-- Son Yedekleme -->
            <StackPanel Spacing="8">
                <TextBlock Text="Son Yedekleme" FontWeight="SemiBold"/>
                <TextBlock Text="{x:Bind ViewModel.LastBackupInfo, Mode=OneWay}"
                           FontSize="14"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                <Button Content="Şimdi Yedekle"
                        Command="{x:Bind ViewModel.BackupNowCommand}"
                        Style="{StaticResource AccentButtonStyle}">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE777;" FontSize="14"/>
                                <TextBlock Text="Şimdi Yedekle"/>
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>
            </StackPanel>

            <MenuFlyoutSeparator/>

            <!-- Sıfırla -->
            <Button Content="Varsayılan Ayarlara Dön"
                    Command="{x:Bind ViewModel.ResetToDefaultsCommand}"
                    HorizontalAlignment="Left">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE72C;" FontSize="14"/>
                            <TextBlock Text="Varsayılan Ayarlara Dön"/>
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>

        </StackPanel>
    </ScrollViewer>
</UserControl>

